{
    "manifest_version": 3,
    "name": "EPUB Generator",
    "version": "1.0",
    "description": "Generate EPUB from a specific URL",
    "permissions": [
        "activeTab",
        "storage", 
        "downloads"
    ],
    "host_permissions": [
        "https://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.jpg",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "icons": {
        "16": "images/icon16.jpg",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}